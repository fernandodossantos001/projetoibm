package br.com.deschateie.bo;

import br.com.deschateie.beans.Consulta;
import br.com.deschateie.dao.ConsultaDAO;

public class ConsultaBO {
	
	public static Consulta pesquisarConsulta(int codConsulta)throws Exception{
		
		if(codConsulta < 1) {
			return new Consulta();
		}
		
		if(codConsulta>99999) {
			return new Consulta();
		}
		
		Consulta c = new ConsultaDAO().pesquisarConsulta(codConsulta);
		return c;
	}

	public static Consulta pesquisarConsultaPaciente(int codPaciente)throws Exception{
		
		if(codPaciente< 1) {
			return new Consulta();
		}
		
		if(codPaciente>99999) {
			return new Consulta();
		}
		
		Consulta c = new ConsultaDAO().pesquisarConsulta(codConsulta);
		return c;
	}
}
