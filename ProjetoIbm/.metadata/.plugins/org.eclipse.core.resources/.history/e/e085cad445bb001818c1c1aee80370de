package br.com.deschateie.bo;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class DataBO {
	
	public static String validarData(String data) {
		
		Pattern pattern = Pattern.compile("^(0?[1-9]|[12][0-9]|3[01])[\\/\\-](0?[1-9]|1[012])[\\/\\-]\\d{4}$");
		Matcher matcher = pattern.matcher(data);
		if(!matcher.find()) {
			return "data inválido";
		}
		return data;
	}
	
	public static String validaDataHora(String dataHora) throws ParseException {
		String data = dataHora.substring(0, 10);
		
		
		String novaData = (new SimpleDateFormat("dd/mm/yyyy").parse(data)).toString();
		
//		String regexData = "^(0?[1-9]|[12][0-9]|3[01])[\\/\\-](0?[1-9]|1[012])[\\/\\-]\\d{4}$";
//		Pattern pattern = Pattern.compile(regexData);
//		Matcher matcher = pattern.matcher(data);
//		
//		if(!matcher.find()) {
//			return "data inválido"; 
//		}
		
		String hora = dataHora.substring(11, dataHora.length());
		
		
		
		
		
		
		return data + " "+ hora;
		
	}

}
