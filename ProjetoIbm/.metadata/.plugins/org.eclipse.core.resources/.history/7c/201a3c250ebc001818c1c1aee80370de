package br.com.deschateie.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import br.com.deschateie.beans.Consulta;
import br.com.deschateie.conexao.Conexao;

public class ConsultaDAO {
	private Connection con;
	private PreparedStatement stmt;
	private ResultSet rs ;
	
	public ConsultaDAO()throws Exception{
		con = new Conexao().conectar();
	}
	
	public Consulta pesquisarConsulta(Consulta c)throws Exception{
		stmt = con.prepareStatement("SELECT * FROM T_SCP_CONSULTA INNER JOIN T_SCP_PSI_ONLINE"
									+ " ON (T_SCP_CONSULTA.CD_PSICOLOGO_ON = T_SCP_PSI_ONLINE.CD_PSICOLOGO_ON)"
									+ " INNER JOIN T_SCP_PACIENTE ON (T_SCP_CONSULTA.CD_PACIENTE = T_SCP_PACIENTE.CD_PACIENTE)"
									+ " WHERE CD_CONSULTA = ?");
		stmt.setInt(1, c.getCodConsulta());
		rs = stmt.executeQuery();
		if(rs.next()) {
			return new Consulta(
					codConsulta,
					psicologo,
					paciente,
					conversa,
					dataConsulta,
					notaAtendimento, 
					comentario)
		}
	}

}
